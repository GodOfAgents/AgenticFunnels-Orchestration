# =============================================================================
# AFO Platform - Frontend Environment Variables
# =============================================================================
# Copy this file to .env and fill in your actual values
# cp .env.example .env

# =============================================================================
# BACKEND API URL
# =============================================================================
# URL where the FastAPI backend is running
# Development: http://localhost:8001
# Production: https://your-domain.com/api
REACT_APP_BACKEND_URL=http://localhost:8001

# =============================================================================
# WEBSOCKET URL
# =============================================================================
# WebSocket URL for real-time features
# Development: ws://localhost:8001
# Production: wss://your-domain.com
REACT_APP_WS_URL=ws://localhost:8001

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
# Application name
REACT_APP_NAME=AFO Platform

# Application environment
REACT_APP_ENV=development

# =============================================================================
# ANALYTICS (Optional)
# =============================================================================
# Google Analytics ID
# REACT_APP_GA_ID=G-XXXXXXXXXX

# Plausible Analytics Domain
# REACT_APP_PLAUSIBLE_DOMAIN=your-domain.com

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable voice features in UI
REACT_APP_ENABLE_VOICE=true

# Enable workflow builder
REACT_APP_ENABLE_WORKFLOWS=true

# Enable admin panel
REACT_APP_ENABLE_ADMIN=true

# =============================================================================
# EXTERNAL SERVICES (Client-Side)
# =============================================================================
# Stripe Public Key (if using Stripe payments)
# REACT_APP_STRIPE_PUBLIC_KEY=pk_test_...

# =============================================================================
# DEBUG SETTINGS
# =============================================================================
# Enable debug mode (shows console logs)
REACT_APP_DEBUG=false

# Enable verbose API logging
REACT_APP_VERBOSE_API=false

# =============================================================================
# WASP CONFIGURATION
# =============================================================================
# Wasp-specific environment variables
# These are typically managed by Wasp, but can be overridden

# Server host (leave as default unless needed)
# HOST=0.0.0.0

# Server port (leave as default unless needed)
# PORT=3000

# =============================================================================
# NOTES
# =============================================================================
# 1. All REACT_APP_* variables are accessible in the React app
# 2. Never expose sensitive API keys in frontend environment variables
# 3. Backend URL must be accessible from the browser
# 4. Use HTTPS in production
# 5. See README.md for detailed setup instructions
